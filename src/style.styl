@import url('https://fonts.googleapis.com/css?family=Roboto')

.window
  width auto
  margin 0 auto
  padding 15px
  background-color gold
  font-family: 'Roboto', sans-serif;

.window__h1
  margin 0
  padding 0
  text-align center
  letter-spacing 2px

.window__game
  display flex
  flex-direction column
  justify-content center
  align-items center
  padding 15px 0

.window__controller
  display flex
  justify-content center

.window__input
  height 27px
  width 60px
  margin 5px
  border 0
  border-radius 2px
  text-align center
  font-size 0.95rem
  font-family 'Roboto', sans-serif
  transition color, background-color 0.5s
  cursor pointer

  &:hover
    background-color black
    color white

.window__row
  display block
  margin 0px

.window__cell
  display inline-block
  width 20px
  height 20px
  margin 0px 2px
  background-color black
  border-radius 2px
  cursor pointer

  &:hover
    background-color red

.window__cell_enable
  background-color white

.window__controller
  display flex
  align-items center

.window__button
  height 27px
  width 60px
  margin 5px
  border 0
  outline 0
  border-radius 2px
  background-color black
  font-size 0.9rem
  color white
  cursor pointer
  font-family 'Roboto', sans-serif

  &:active
    transform scale(0.97)

  &::-moz-focus-inner
    border 0
